.button
  padding: $vertical-spacing $horizontal-spacing
  border: none 

  outline: none
  cursor: pointer
  transition: background .3s ease

  &--primary
    background-color: $primary-color

    color: $white

    &:hover
      background-color: lighten($primary-color, 15%)
  
  &--primary-light
    background-color: $primary-light-color

    color: $white

    &:hover
      background-color: darken($primary-light-color, 15%)

  &--accent
    background-color: $accent-color

    color: $white

    &:hover
      background-color: darken($accent-color, 15%)

  &--flat
    border: 1px solid $grey-xlight

    &:hover
      background-color: $grey-xlight

