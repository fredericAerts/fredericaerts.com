.page-header
  height: $page-header-height
  padding: 0 ($horizontal-spacing / 2)

  line-height: $page-header-height

.page-header__link
  float: right

  height: "calc(100% - %s)" % ($vertical-spacing * 2)
  margin: $vertical-spacing 0
  padding: 0 $horizontal-spacing
  border: 1px solid $text-color
  border-radius: 2%
  
  color: $text-color
  font-size: 14px
  line-height: $page-header-height - ($vertical-spacing * 2)